@model IEnumerable<ArchitectureMvc.Application.DTOs.UsuarioDto>

@{
    ViewData["Title"] = "Lista de Usuários";
}

<h2>@ViewData["Title"]</h2>

<table class="table">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Email</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var usuario in Model)
        {
            <tr>
                <td>@usuario.Nome</td>
                <td>@usuario.Email</td>
                <td>
                    <a href="@Url.Action("Edit", "Usuario", new { id = usuario.Id })" class="btn btn-warning btn-sm">Editar</a>
                    <a href="@Url.Action("Delete", "Usuario", new { id = usuario.Id })" class="btn btn-danger btn-sm">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>
