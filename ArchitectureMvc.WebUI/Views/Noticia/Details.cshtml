@model ArchitectureMvc.Application.DTOs.NoticiaDto

<h3>Detalhes da Notícia</h3>

<div class="card">
    <div class="card-header">
        <h4>@Model.Titulo</h4>
    </div>
    <div class="card-body">
        <p><strong>Texto:</strong> @Model.Texto</p>
        <p><strong>Usuário:</strong> @Model.UsuarioNome</p>
        <p><strong>Tags:</strong> @string.Join(", ", Model.Tags)</p>
    </div>
    <div class="card-footer text-right">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Editar</a>
        <a asp-action="Index" class="btn btn-secondary">Voltar à Lista</a>
    </div>
</div>
